{
  "slider-layout#hero__sliders": {
    "title": "Hero Slider",
    "props": {
      "itemsPerPage": {
        "desktop": 1,
        "phone": 1
      },
      "showNavigationArrows": "never",
      "blockClass": "hero__sliders",
      "autoplay": {
        "timeout": 3000,
        "stopOnHover": true
      }
    },
    "children": [
      "info-card#hero__slider--one",
      "info-card#hero__slider--two",
      "info-card#hero__slider--three"
    ]
  },
  "info-card#hero__slider--one": {
    "props": {
      "id": "info-card-example",
      "isFullModeStyle": true,
      "imageUrl": "assets/img/hero-slider-1-desktop.jpg",
      "mobileImageUrl": "assets/img/hero-slider-1-mobile.jpg",
      "callToActionText": "Comanda acum",
      "callToActionUrl": "/",
      "textAlignment": "center",
      "blockClass": "hero__slider--one"
    }
  },
  "info-card#hero__slider--two": {
    "props": {
      "id": "info-card-example",
